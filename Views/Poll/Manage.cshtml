@model List<HOMEOWNER.Models.Poll>

@{
    ViewData["Title"] = "Manage Polls & Surveys";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<style>
    .management-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-top: 1rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e9ecef;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2c3e50;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-title i {
        color: #4361ee;
    }

    .btn-create {
        background: #4361ee;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-create:hover {
        background: #3a56d4;
    }

    .data-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .data-table thead {
        background: linear-gradient(135deg, #4361ee, #3a56d4);
        color: white;
    }

    .data-table th {
        padding: 1rem;
        font-weight: 600;
        text-align: left;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .data-table td {
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
    }

    .data-table tbody tr:hover {
        background-color: rgba(67, 97, 238, 0.05);
    }

    .status-badge {
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .status-active { background: #e8f5e9; color: #388e3c; }
    .status-draft { background: #fff3e0; color: #f57c00; }
    .status-closed { background: #e3f2fd; color: #1976d2; }

    .btn-action {
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        margin-right: 0.5rem;
        font-size: 0.85rem;
    }

    .btn-view { background: #3b82f6; color: white; }
    .btn-results { background: #8b5cf6; color: white; }
    .btn-delete { background: #ef4444; color: white; }
</style>

<div class="management-container">
    <div class="page-header">
        <h2 class="page-title">
            <i class="fas fa-poll"></i>
            Polls & Surveys Management
        </h2>
        <button class="btn-create" onclick="createPoll()">
            <i class="fas fa-plus"></i> Create Poll
        </button>
    </div>

    <table class="data-table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Status</th>
                <th>Total Votes</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var poll in Model)
                {
                    <tr>
                        <td><strong>@poll.Question</strong></td>
                        <td>
                            <span class="status-badge status-@poll.Status.ToLower()">
                                @poll.Status
                            </span>
                        </td>
                        <td>@poll.TotalVotes</td>
                        <td>@(poll.StartDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                        <td>@(poll.EndDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                        <td>
                            <button class="btn-action btn-view" onclick="viewPoll(@poll.PollID)">
                                <i class="fas fa-eye"></i> View
                            </button>
                            <button class="btn-action btn-results" onclick="viewResults(@poll.PollID)">
                                <i class="fas fa-chart-bar"></i> Results
                            </button>
                            <button class="btn-action btn-delete" onclick="deletePoll(@poll.PollID)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" style="text-align: center; padding: 3rem;">
                        <i class="fas fa-inbox" style="font-size: 3rem; color: #adb5bd;"></i>
                        <p>No polls found</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function createPoll() {
        $.get('/Poll/Create', function(data) {
            $('#mainContent').html(data);
        });
    }

    function viewPoll(id) {
        $.get('/Poll/Details/' + id, function(data) {
            $('#mainContent').html(data);
        });
    }

    function viewResults(id) {
        $.get('/Poll/Results/' + id, function(data) {
            $('#mainContent').html(data);
        });
    }

    function deletePoll(id) {
        if (confirm('Are you sure you want to delete this poll?')) {
            $.post('/Poll/Delete/' + id, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
    }
</script>

