@{
    var staffName = ViewData["StaffName"]?.ToString() ?? "Unknown Staff";
    var position = ViewData["Position"]?.ToString() ?? "Unknown";
    var pendingCount = ViewData["PendingCount"] as int? ?? 0;
    var completedCount = ViewData["CompletedCount"] as int? ?? 0;
    var pendingRequests = ViewData["PendingRequests"] as List<ServiceRequest> ?? new List<ServiceRequest>();
    var completedRequests = ViewData["CompletedRequests"] as List<ServiceRequest> ?? new List<ServiceRequest>();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Dashboard - @position Management</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/modern-dashboard.css" asp-append-version="true">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <!-- Logo Section -->
            <div class="profile-section">
                <img src="~/logo.png" alt="Logo" class="profile-img" style="border-radius: 12px;" />
                <p style="font-size: 1.1rem; font-weight: 600; margin-top: 1rem;">@staffName</p>
                <p style="font-size: 0.875rem; color: rgba(255, 255, 255, 0.7);">@position Manager</p>
            </div>

            <!-- Navigation Menu -->
            <div class="sidebar-header">Navigation</div>
            <nav class="menu">
                <a href="#" id="dashboard-link" class="active">
                    <i class="fas fa-home"></i> <span>Dashboard</span>
                </a>
                <a href="#" id="management-nav">
                    <i class="fas fa-tasks"></i> <span>Management</span>
                </a>
                <a href="#">
                    <i class="fas fa-calendar-alt"></i> <span>Calendar</span>
                </a>
                <a href="#">
                    <i class="fas fa-chart-bar"></i> <span>Reports</span>
                </a>
            </nav>

            <!-- Account Section -->
            <div class="sidebar-header">Account</div>
            <nav class="menu">
                <a href="#">
                    <i class="fas fa-cog"></i> <span>Settings</span>
                </a>
                <a asp-controller="Account" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> <span>Log Out</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Navigation -->
            <div class="top-nav">
                <div class="page-title">
                    <h1 id="content-title">@position Dashboard</h1>
                </div>
                <div class="nav-actions">
                    <button class="forum-btn" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <i class="fas fa-bell"></i> Notifications
                    </button>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div id="dashboard-content">
                <div id="dynamic-content">
                    <!-- Welcome Box -->
                    <div class="content-box">
                        <h2>Welcome, @staffName! 👋</h2>
                        <p class="intro">Manage your @position.ToLower() tasks efficiently. Track pending and completed service requests all in one place.</p>
                    </div>

                    <!-- Stats Cards -->
                    @if (position == "Maintenance")
                    {
                        <div class="stats-container">
                            <div class="stat-card reservations">
                                <h3>Pending Maintenance</h3>
                                <p>Awaiting Action</p>
                                <span class="stat-value">@pendingRequests.Count(r => r.Category == "Maintenance")</span>
                            </div>
                            <div class="stat-card payments">
                                <h3>Completed Tasks</h3>
                                <p>This Month</p>
                                <span class="stat-value">@completedRequests.Count(r => r.Category == "Maintenance")</span>
                            </div>
                            <div class="stat-card requests">
                                <h3>Total Requests</h3>
                                <p>All Time</p>
                                <span class="stat-value">@(pendingRequests.Count(r => r.Category == "Maintenance") + completedRequests.Count(r => r.Category == "Maintenance"))</span>
                            </div>
                        </div>
                    }
                    else if (position == "Security")
                    {
                        <div class="stats-container">
                            <div class="stat-card reservations">
                                <h3>Pending Security</h3>
                                <p>Awaiting Action</p>
                                <span class="stat-value">@pendingRequests.Count(r => r.Category == "Security")</span>
                            </div>
                            <div class="stat-card payments">
                                <h3>Completed Tasks</h3>
                                <p>This Month</p>
                                <span class="stat-value">@completedRequests.Count(r => r.Category == "Security")</span>
                            </div>
                            <div class="stat-card requests">
                                <h3>Total Requests</h3>
                                <p>All Time</p>
                                <span class="stat-value">@(pendingRequests.Count(r => r.Category == "Security") + completedRequests.Count(r => r.Category == "Security"))</span>
                            </div>
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="content-box">
                        <h2>Quick Actions</h2>
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 1.5rem;">
                            <a href="#" id="management-nav-btn" class="cta-btn" style="text-align: center;">
                                <i class="fas fa-tasks"></i> View All Tasks
                            </a>
                            <a href="#" class="cta-btn" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); text-align: center;">
                                <i class="fas fa-check-circle"></i> Mark Complete
                            </a>
                            <a href="#" class="cta-btn" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); text-align: center;">
                                <i class="fas fa-chart-line"></i> View Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Content (Initially Hidden) -->
            <div id="management-content" style="display: none;">
                <!-- This content will be replaced by AJAX when Management is clicked -->
            </div>
        </main>
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Mobile Sidebar Toggle
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }

        // Animate menu items on load
        document.addEventListener('DOMContentLoaded', function() {
            const menuItems = document.querySelectorAll('.menu a');
            menuItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateX(-20px)';
                setTimeout(() => {
                    item.style.transition = 'all 0.3s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateX(0)';
                }, index * 50);
            });
        });

        $(document).ready(function() {
            // Show Dashboard content
            $('#dashboard-link').click(function(event) {
                event.preventDefault();
                $('#dashboard-content').show();
                $('#management-content').hide();
                $('#content-title').text('@position Dashboard');
                
                $('.menu a').removeClass('active');
                $(this).addClass('active');
                
                if (window.innerWidth <= 768) {
                    toggleSidebar();
                }
            });

            // Show Management content
            $('#management-nav, #management-nav-btn').click(function(event) {
                event.preventDefault();
                
                $.ajax({
                    url: '@Url.Action("Management", "Staff")',
                    type: 'GET',
                    success: function(data) {
                        $('#management-content').html(data);
                        $('#dashboard-content').hide();
                        $('#management-content').show();
                        $('#content-title').text('Task Management');
                    },
                    error: function(xhr, status, error) {
                        console.error("Error loading management page:", error);
                        alert('Error loading management content');
                    }
                });
                
                $('.menu a').removeClass('active');
                $('#management-nav').addClass('active');
                
                if (window.innerWidth <= 768) {
                    toggleSidebar();
                }
            });
        });
    </script>
</body>
</html>
