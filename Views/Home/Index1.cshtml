@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HOMEOWNER SUBDIVISION</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <style>
        /* Add these new styles */
        .page-section {
            display: none;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            min-height: 100vh;
            padding-top: 80px;
        }

            .page-section.active {
                display: block;
                opacity: 1;
            }

        /* Changed background to white for these sections */
        .about, .services, .contact {
            background-color: #fff;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.95) !important;
        }

            .navbar.scrolled {
                background-color: rgba(255, 255, 255, 0.98) !important;
            }

        .navbar-dark .nav-link {
            color: var(--dark-color) !important;
        }
    </style>
</head>

<body>

    <!-- Navbar (Always Visible) -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navimg" href="#" data-section="homeSection">
                <img src="~/logo.png" alt="Logo" class="navlogo animate__animated animate__fadeInLeft">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#" data-section="homeSection">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#" data-section="aboutSection">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#" data-section="servicesSection">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="#" data-section="contactSection">Contact</a></li>
                </ul>
                <a href="Account/Login" class="btn btn-primary ms-3 pulse-button">Log in</a>
            </div>
        </div>
    </nav>

    <!-- Home Section -->
    <section class="home page-section active" id="homeSection">
        <div class="container d-flex align-items-center justify-content-between flex-wrap">
            <div class="herotext animate__animated animate__fadeInLeft">
                <h1 class="herotitle">Where Your Comfort Feels Like <span class="text-gradient">Home</span></h1>
                <p class="lead">"Experience comfort and homeliness with a variety of activities to make your stay unforgettable."</p>
                <a asp-controller="Booking" asp-action="Index" class="btn btn-primary btn-glow">Reserve Now</a>
            </div>
            <div class="heroimage animate__animated animate__fadeInRight">
                <img src="~/image2.jpg" alt="Hotel" class="image floating" />
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about page-section" id="aboutSection">
        <div class="container">
            <!-- Logos (Aligned at the Top) -->
            <div class="row align-items-start text-center mb-5">
                <div class="col-md-3 col-6">
                    <img src="~/agoda.png" alt="Agoda" class="brand-logo logo-hover">
                </div>
                <div class="col-md-3 col-6">
                    <img src="~/airbnb.png" alt="Airbnb" class="brand-logo logo-hover">
                </div>
                <div class="col-md-3 col-6">
                    <img src="~/booking.png" alt="Booking.com" class="brand-logo logo-hover">
                </div>
                <div class="col-md-3 col-6">
                    <img src="~/trivago.png" alt="Trivago" class="brand-logo logo-hover">
                </div>
            </div>

            <!-- About Content (Left: Image, Right: Text) -->
            <div class="row align-items-center mt-5">
                <!-- Left: Image -->
                <div class="col-lg-5 col-md-6 text-center mb-4 mb-md-0">
                    <img src="~/image3.jpg" alt="About Us" class="img-fluid floating-2">
                </div>

                <!-- Right: Text -->
                <div class="col-lg-7 col-md-6 about-content">
                    <h2 class="about-title animate__animated animate__fadeIn">Welcome to <span class="text-gradient">RestNestHome</span></h2>
                    <p class="about-text animate__animated animate__fadeIn animate__delay-1s" style="color: #000;">
                        A peaceful and comfortable community where care meets comfort. Nestled in a serene subdivision,
                        we offer a welcoming and safe environment for our residents to call home. Our goal is to provide
                        the highest level of care, support, and companionship in a homely atmosphere that promotes
                        well-being and independence.
                    </p>
                    <p class="about-text animate__animated animate__fadeIn animate__delay-2s" style="color: #000;">
                        At <strong>RestNestHome</strong>, we understand the importance of personalized care. Whether it's
                        for short-term stays, long-term living, or specialized care, we tailor our services to meet the
                        unique needs of each resident. Our dedicated team of professional caregivers ensures that
                        everyone receives exceptional care while maintaining their dignity and independence.
                    </p>
                    <p class="about-text animate__animated animate__fadeIn animate__delay-3s" style="color: #000;">
                        We're conveniently located within a peaceful subdivision, offering a quiet and scenic setting.
                        Our residents enjoy the best of both worlds: the tranquility of suburban life combined with easy
                        access to local amenities, healthcare services, and transportation.
                    </p>
                    <h3 class="about-subtitle animate__animated animate__fadeIn animate__delay-4s">Book Your Stay Today!</h3>
                    <p class="about-text animate__animated animate__fadeIn animate__delay-5s" style="color: #000;">
                        We invite you to experience the warmth and compassion of <strong>RestNestHome</strong>. Booking your
                        stay is simple! Our online booking platform allows you to easily schedule a visit or secure your spot
                        in our subdivision.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services page-section" id="servicesSection">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="section-title animate__animated animate__fadeIn">Our <span class="text-gradient">Services</span></h2>
                    <p class="section-subtitle animate__animated animate__fadeIn animate__delay-1s">Discover the range of services we offer to enhance your experience.</p>
                </div>
            </div>

            <!-- Service Cards -->
            <div class="row">
                <!-- Service 1 -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="service-card animate__animated animate__fadeInUp animate__delay-1s">
                        <div class="service-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h4 class="service-title">Home Security Services</h4>
                        <p class="service-text">Protect your home and loved ones with our comprehensive Home Security Services.</p>
                        <div class="service-hover-content">
                            <p>24/7 monitoring and rapid response</p>
                            <a href="#" class="btn btn-outline-light btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>

                <!-- Service 2 -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="service-card animate__animated animate__fadeInUp animate__delay-2s">
                        <div class="service-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                        <h4 class="service-title">Home Maintenance Services</h4>
                        <p class="service-text">Keep your home in top condition with our Home Maintenance Services.</p>
                        <div class="service-hover-content">
                            <p>Professional repairs and regular upkeep</p>
                            <a href="#" class="btn btn-outline-light btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>

                <!-- Service 3 -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="service-card animate__animated animate__fadeInUp animate__delay-3s">
                        <div class="service-icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <h4 class="service-title">Subdivision Services</h4>
                        <p class="service-text">We provide security and gate control, waste management, landscaping, and maintenance.</p>
                        <div class="service-hover-content">
                            <p>Community-wide services for all residents</p>
                            <a href="#" class="btn btn-outline-light btn-sm">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact page-section" id="contactSection">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="section-title animate__animated animate__fadeIn">Get In <span class="text-gradient">Touch</span></h2>
                </div>
            </div>
            <div class="row">
                <!-- Contact Information (Left Side) -->
                <div class="col-lg-6 mb-5 mb-lg-0 animate__animated animate__fadeInLeft">
                    <div class="contact-info">
                        <h4 class="contact-title">Contact Information</h4>
                        <div class="contact-item">
                            <i class="fas fa-phone-alt"></i>
                            <span>+2555-77777(2414)</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <span>restnesthome@gmail.com</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-clock"></i>
                            <span>Mon - Sat : 8:00 A.M. - 5:00 P.M.</span>
                        </div>
                        <div class="contact-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>123 Subdivision Ave, Comfort City</span>
                        </div>

                        <hr>

                        <!-- Social Media Icons -->
                        <h5>Our Social Media</h5>
                        <div class="social-icons">
                            <a href="https://www.facebook.com" target="_blank" class="social-icon">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://www.youtube.com" target="_blank" class="social-icon">
                                <i class="fab fa-youtube"></i>
                            </a>
                            <a href="https://www.twitter.com" target="_blank" class="social-icon">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://www.instagram.com" target="_blank" class="social-icon">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Contact Form (Right Side) -->
                <div class="col-lg-6 animate__animated animate__fadeInRight">
                    <div class="contact-form">
                        <h4 class="contact-title">Send Us a Message</h4>
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Full Name" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Subject">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-glow">
                                <i class="fas fa-paper-plane"></i> Send Message
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="sitefooter">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/logo.png" alt="Logo" class="footer-logo mb-3">
                    <p>Where comfort meets community living at its finest.</p>
                </div>
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a href="#" data-section="homeSection">Home</a></li>
                        <li><a href="#" data-section="aboutSection">About</a></li>
                        <li><a href="#" data-section="servicesSection">Services</a></li>
                        <li><a href="#" data-section="contactSection">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Legal</h5>
                    <ul class="footer-links">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="copyright">&copy; 2025 RestNestHome. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        new WOW().init();

        // Handle section transitions
        document.addEventListener('DOMContentLoaded', function() {
            // Show home section by default
            document.getElementById('homeSection').classList.add('active');

            // Set up click handlers for navigation
            document.querySelectorAll('[data-section]').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetSection = this.getAttribute('data-section');

                    // Hide all sections
                    document.querySelectorAll('.page-section').forEach(section => {
                        section.classList.remove('active');
                    });

                    // Show target section
                    document.getElementById(targetSection).classList.add('active');

                    // Scroll to top
                    window.scrollTo(0, 0);
                });
            });

            // Navbar background change on scroll
            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        });
    </script>
</body>
</html>