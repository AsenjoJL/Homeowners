@model IEnumerable<IGrouping<string, HOMEOWNER.Models.Contact>>

@{
    ViewData["Title"] = "Contact Directory";
}

<div class="container-fluid">
    <h2><i class="fas fa-address-book me-2"></i>Contact Directory</h2>

    @if (Model != null && Model.Any())
    {
        @foreach (var group in Model)
        {
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>@group.Key</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var contact in group)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            @contact.Name
                                            @if (contact.IsEmergency)
                                            {
                                                <span class="badge bg-danger ms-2">Emergency</span>
                                            }
                                        </h6>
                                        @if (!string.IsNullOrEmpty(contact.Position))
                                        {
                                            <p class="text-muted small mb-2">@contact.Position</p>
                                        }
                                        @if (!string.IsNullOrEmpty(contact.PhoneNumber))
                                        {
                                            <p class="mb-1"><i class="fas fa-phone me-2"></i>@contact.PhoneNumber</p>
                                        }
                                        @if (!string.IsNullOrEmpty(contact.MobileNumber))
                                        {
                                            <p class="mb-1"><i class="fas fa-mobile-alt me-2"></i>@contact.MobileNumber</p>
                                        }
                                        @if (!string.IsNullOrEmpty(contact.Email))
                                        {
                                            <p class="mb-1"><i class="fas fa-envelope me-2"></i><a href="mailto:@contact.Email">@contact.Email</a></p>
                                        }
                                        @if (!string.IsNullOrEmpty(contact.OfficeLocation))
                                        {
                                            <p class="mb-0 text-muted small"><i class="fas fa-map-marker-alt me-1"></i>@contact.OfficeLocation</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No contacts available.
        </div>
    }
</div>

