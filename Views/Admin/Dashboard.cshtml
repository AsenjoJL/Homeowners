@model List<Homeowner>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <!-- Base Dashboard Styles -->
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true">
    
    <!-- Admin Dashboard Scrolling Fix - MUST come after Dashboard.css -->
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">






</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <button class="navbar-toggler d-lg-none" type="button" id="sidebarToggle">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand d-none d-lg-block" href="@Url.Action("Dashboard", "Admin")" style="font-weight: 600; font-size: 1.25rem;">
                <i class="fas fa-home me-2"></i>Admin Dashboard
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <div class="dropdown">
                    <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-2"></i> <span class="d-none d-md-inline">Admin Profile</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user-edit me-2"></i>Upload Profile Picture</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Change Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar">
                <ul class="nav flex-column sidebar-menu">
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Dashboard", "Admin")">
                            <i class="fas fa-home"></i> <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- User Management Category -->
                    <li class="menu-category">User Management</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("ManageOwners")">
                            <i class="fas fa-users"></i> <span>Homeowners</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("ManageStaff")">
                            <i class="fas fa-user-tie"></i> <span>Staff</span>
                        </a>
                    </li>

                    <!-- Service Management Category -->
                    <li class="menu-category">Service Management</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("ManageServiceRequests")">
                            <i class="fas fa-tools"></i> <span>Service Requests</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("ReservationManagement", "Admin")">
                            <i class="fas fa-calendar-check"></i> <span>Reservations</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "Complaint")">
                            <i class="fas fa-exclamation-circle"></i> <span>Complaints</span>
                        </a>
                    </li>

                    <!-- Content Management Category -->
                    <li class="menu-category">Content Management</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("AnnouncementList", "Admin")">
                            <i class="fas fa-bullhorn"></i> <span>Announcements</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("EventCalendar", "Admin")">
                            <i class="fas fa-calendar-alt"></i> <span>Events</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Index", "Forum")">
                            <i class="fas fa-comments"></i> <span>Community Forum</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "Document")">
                            <i class="fas fa-file-alt"></i> <span>Documents</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "Poll")">
                            <i class="fas fa-poll"></i> <span>Polls & Surveys</span>
                        </a>
                    </li>

                    <!-- Community Management Category -->
                    <li class="menu-category">Community Management</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "Contact")">
                            <i class="fas fa-address-book"></i> <span>Contact Directory</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "VisitorPass")">
                            <i class="fas fa-id-card"></i> <span>Visitor Passes</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Manage", "VehicleRegistration")">
                            <i class="fas fa-car"></i> <span>Vehicle Registration</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Index", "GateAccessLog")">
                            <i class="fas fa-door-open"></i> <span>Gate Access Logs</span>
                        </a>
                    </li>

                    <!-- Financial Management Category -->
                    <li class="menu-category">Financial Management</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("CreateBilling", "Admin")">
                            <i class="fas fa-money-bill-wave"></i> <span>Billing & Payments</span>
                        </a>
                    </li>

                    <!-- Reports & Analytics Category -->
                    <li class="menu-category">Reports & Analytics</li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" data-url="@Url.Action("Analytics", "Admin")">
                            <i class="fas fa-chart-bar"></i> <span>Analytics Dashboard</span>
                        </a>
                    </li>

                    <!-- Logout -->
                    <li class="nav-item sidebar-logout">
                        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout" style="color: #ff6b6b !important;">
                            <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Sidebar Backdrop (Mobile) -->
            <div class="sidebar-backdrop" id="sidebarBackdrop"></div>

            <!-- Main Content -->
            <main class="main-content">
                <div id="mainContent" class="content-wrapper">
                    @await Html.PartialAsync("_Dashboard")
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // AGGRESSIVE FIX: Force sidebar scrolling to work
            function forceSidebarScrolling() {
                var $sidebarMenu = $('.sidebar-menu');
                
                if ($sidebarMenu.length) {
                    // Force CSS properties via JavaScript
                    $sidebarMenu.css({
                        'overflow-y': 'scroll',
                        'overflow-x': 'hidden',
                        '-webkit-overflow-scrolling': 'touch',
                        'overscroll-behavior': 'contain'
                    });
                    
                    // Ensure all menu items are visible
                    $('.sidebar-menu .nav-item, .sidebar-menu .menu-category').css({
                        'display': 'block',
                        'visibility': 'visible',
                        'opacity': '1'
                    });
                    
                    // CSS Grid handles the layout - no need to calculate header height
                    console.log('✅ Using CSS Grid layout for sidebar');
                    
                    
                    // Let browser handle scrolling naturally - NO custom scroll handling
                    var sidebarMenuElement = $('.sidebar-menu')[0];
                    console.log('✅ Using native browser scrolling');
                    
                    if (sidebarMenuElement) {
                        console.log('✅ Sidebar scrolling forcefully enabled!');
                        console.log('Sidebar menu scrollHeight:', sidebarMenuElement.scrollHeight);
                        console.log('Sidebar menu clientHeight:', sidebarMenuElement.clientHeight);
                    }
                }
            }
            
            // Run immediately
            forceSidebarScrolling();
            
            // Run again after a delay to ensure DOM is fully loaded
            setTimeout(forceSidebarScrolling, 500);
            setTimeout(forceSidebarScrolling, 1000);
            
            // Run on window resize
            $(window).resize(function() {
                setTimeout(forceSidebarScrolling, 100);
            });
            
            // Handle menu link clicks
            $(".menu-link").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                if (url) {
                    loadContent(url);
                }
            });

            function loadContent(url) {
                // Show loading spinner with animation
                $("#mainContent").html('<div class="text-center py-5"><div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"><span class="visually-hidden">Loading...</span></div><p class="mt-3 text-muted">Loading content...</p></div>');

                $.ajax({
                    url: url,
                    type: "GET",
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    success: function (data) {
                        // Check if response is HTML (full page) or partial view
                        if (data.trim().startsWith('<!DOCTYPE') || data.trim().startsWith('<!doctype')) {
                            // Full page response - extract main content or show message
                            $("#mainContent").html('<div class="alert alert-info"><i class="fas fa-info-circle me-2"></i>This page opens in a new window. <a href="' + url + '" target="_blank" class="alert-link">Click here to open</a></div>');
                        } else {
                            // Partial view - load normally
                            $("#mainContent").hide().html(data).fadeIn(400);
                        }
                        
                        // Update active menu item
                        $(".nav-link").removeClass("active");
                        $('[data-url="' + url + '"]').addClass("active");

                        // Execute scripts in loaded content (for AJAX-loaded partials)
                        var scripts = $("#mainContent").find("script");
                        scripts.each(function() {
                            try {
                                eval($(this).html());
                            } catch (e) {
                                console.error("Error executing script:", e);
                            }
                        });

                        // Close sidebar on mobile after selection
                        if ($(window).width() < 992) {
                            $(".sidebar").removeClass("active");
                            $(".main-content").removeClass("expanded");
                            $("#sidebarBackdrop").hide();
                        }
                        
                        // Scroll to top smoothly
                        $('html, body').animate({ scrollTop: 0 }, 300);
                    },
                    error: function (xhr) {
                        var errorMsg = 'Error loading content.';
                        if (xhr.status === 404) {
                            errorMsg = 'Page not found. The requested page may not exist.';
                        } else if (xhr.status === 403) {
                            errorMsg = 'Access denied. You may not have permission to view this page.';
                        }
                        $("#mainContent").html('<div class="alert alert-danger alert-dismissible fade show" role="alert"><i class="fas fa-exclamation-triangle me-2"></i>' + errorMsg + '<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
                    }
                });
            }

            // Mobile sidebar toggle
            $("#sidebarToggle").click(function() {
                $(".sidebar").toggleClass("active");
                $(".main-content").toggleClass("expanded");
                $("#sidebarBackdrop").toggle();
            });
            
            // Close sidebar when clicking backdrop
            $("#sidebarBackdrop").click(function() {
                $(".sidebar").removeClass("active");
                $(".main-content").removeClass("expanded");
                $(this).hide();
            });
            
            // Close sidebar when clicking outside on mobile
            $(document).click(function(e) {
                if ($(window).width() < 992) {
                    if (!$(e.target).closest('.sidebar').length &&
                        !$(e.target).closest('#sidebarToggle').length &&
                        !$(e.target).is('#sidebarBackdrop') &&
                        $('.sidebar').hasClass('active')) {
                        $(".sidebar").removeClass("active");
                        $(".main-content").removeClass("expanded");
                        $("#sidebarBackdrop").hide();
                    }
                }
            });
            
            // Handle window resize
            $(window).resize(function() {
                if ($(window).width() >= 992) {
                    $(".sidebar").removeClass("active");
                    $(".main-content").removeClass("expanded");
                }
            });
            
            // Add smooth scroll behavior
            $('html').css('scroll-behavior', 'smooth');
            
            // Add loading animation to menu links
            $(".menu-link").on('click', function() {
                $(this).find('i').addClass('fa-spin');
                setTimeout(() => {
                    $(this).find('i').removeClass('fa-spin');
                }, 1000);
            });
        });
    </script>
</body>
</html>