@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                    <h2 class="card-title">Access Denied</h2>
                    <p class="card-text">You do not have permission to access this resource.</p>
                    <p class="text-muted">Please contact your administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home</a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

