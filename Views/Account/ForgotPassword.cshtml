@model HOMEOWNER.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="login-card">
    <a href="/" class="btn-back d-flex align-items-center mb-3">
        <i class="fas fa-arrow-left me-2"></i> Back to Home
    </a>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }


    <!-- Logo -->
    <div class="logo-container">
        <img src="~/logo.png" alt="Logo" class="logo">
    </div>

    <form asp-action="ForgotPassword" method="post">
        <!-- Email -->
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder=" ">
            <label class="floating-label">Email</label>
            <i class="fas fa-envelope input-icon"></i>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <!-- New Password -->
        <div class="form-group">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder=" ">
            <label class="floating-label">New Password</label>
            <i class="fas fa-lock input-icon"></i>
        </div>
        <span asp-validation-for="NewPassword" class="text-danger"></span>

        <!-- Confirm Password -->
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=" ">
            <label class="floating-label">Confirm Password</label>
            <i class="fas fa-lock input-icon"></i>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Reset Password
        </button>
    </form>
</div>

<style>
    body {
        background: linear-gradient(135deg, #c0e8ff, #eaf6ff);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .login-card {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(15px);
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        width: 450px;
        text-align: center;
        position: relative;
    }

    /* Logo Styling */
    .logo-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .logo {
        width: 130px;
        animation: fadeIn 1s ease-in-out;
    }

    /* Form Group */
    .form-group {
        position: relative;
        margin-bottom: 25px;
    }

    /* Input Styling */
    .form-control {
        width: 100%;
        padding: 18px 15px 10px 50px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        transition: 0.3s ease;
        box-sizing: border-box;
        height: 55px;
    }

        /* Focus Effect */
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 12px rgba(0, 122, 255, 0.4);
            background-color: #ffffff;
        }

        /* Hover Effect */
        .form-control:hover {
            background-color: #eaf6ff;
            border-color: #007bff;
            box-shadow: 0px 0px 10px rgba(0, 122, 255, 0.3);
        }

    /* Floating Label + Broken Line Effect */
    .floating-label {
        position: absolute;
        top: 18px;
        left: 50px;
        font-size: 16px;
        color: #999;
        transition: 0.3s ease;
        pointer-events: none;
        background-color: white;
        padding: 0 5px;

    }

    /* On Focus/Fill Effect */
    .form-control:focus + .floating-label,
    .form-control:not(:placeholder-shown) + .floating-label {
        top: -10px;
        left: 35px;
        font-size: 14px;
        color: #007bff;
        background-color: #ffffff;
        border-top: 2px dashed #007bff;
    }

    /* Icon Styling */
    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #007bff;
        font-size: 18px;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 12px;
        transition: 0.3s ease;
        width: 100%;
        font-size: 18px;
        padding: 14px;
        margin-top: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

</style>
